generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Address{
  id Int @default(autoincrement()) @id
  name String
  number String
  district String
  residences Residence[]
  city String
  state String
  zip_code String
}

model Residence{
  id Int @default(autoincrement()) @id
  complement String @unique
  residents Resident[]
  address Address? @relation(fields: [address_id], references: [id])
  address_id Int
}

model Resident{
  id Int @default(autoincrement()) @id
  name String
  lastName  String
  phone String
  email String @unique
  password String
  staff Staff? @relation(fields: [staff_id], references: [id])
  staff_id Int? @unique
  residence Residence @relation(fields: [residence_id],references: [id])
  residence_id Int
}

model Staff{
  id Int @default(autoincrement()) @id
  admin_residence Boolean
  admin_address Boolean
  ResidentToStaff Resident?
}