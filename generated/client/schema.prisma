generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Address {
  id         Int         @id @default(autoincrement())
  street     String
  number     String
  district   String
  city       String
  state      String
  zip_code   String
  complement String
  residences Residence[]
  staff      Staff[]
}

model Residence {
  id         Int        @id @default(autoincrement())
  name       String?    @unique
  address_id Int
  address    Address    @relation(fields: [address_id], references: [id])
  residents  Resident[]
}

model Resident {
  id           Int       @id @default(autoincrement())
  name         String
  lastName     String
  phone        String
  email        String    @unique
  password     String
  staff_id     Int       @unique
  residence_id Int
  residence    Residence @relation(fields: [residence_id], references: [id])
  staff        Staff     @relation(fields: [staff_id], references: [id])
}

model Staff {
  id              Int       @id @default(autoincrement())
  admin_residence Boolean   @default(false)
  admin_address   Boolean   @default(false)
  Address_id      Int?
  residentToStaff Resident?
  Address         Address?  @relation(fields: [Address_id], references: [id])
}
