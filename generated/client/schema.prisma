generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Address {
  id         Int         @id @default(autoincrement())
  street     String
  number     String
  district   String
  residences Residence[]
  city       String
  state      String
  zip_code   String
  staff      Staff[]
}

model Residence {
  id         Int        @id @default(autoincrement())
  complement String     @unique
  residents  Resident[]
  address    Address?   @relation(fields: [address_id], references: [id])
  address_id Int
}

model Resident {
  id           Int       @id @default(autoincrement())
  name         String
  lastName     String
  phone        String
  email        String    @unique
  password     String
  staff        Staff     @relation(fields: [staff_id], references: [id])
  staff_id     Int       @unique
  residence    Residence @relation(fields: [residence_id], references: [id])
  residence_id Int
}

model Staff {
  id              Int       @id @default(autoincrement())
  admin_residence Boolean   @default(false)
  admin_address   Boolean   @default(false)
  residentToStaff Resident?

  Address    Address? @relation(fields: [Address_id], references: [id])
  Address_id Int?
}
